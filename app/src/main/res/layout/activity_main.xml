<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:gravity="center" android:id="@+id/tableLayout">
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <TextView
                android:text="Tic Tac Toe Game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="center"
                android:textSize="30sp"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/imgButton1" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/ImgButton2" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/imgButton3" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/imgButton4" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/ImgButton5" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/imgButton6" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center">
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/imgButton7" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/ImgButton8" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="120dp" app:srcCompat="@drawable/place_holder"
                android:id="@+id/imgButton9" android:layout_weight="1" android:scaleType="fitCenter"
                android:adjustViewBounds="true" android:onClick="imageButtonTapped"/>
    </TableRow>
</TableLayout>